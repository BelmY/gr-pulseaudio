<?xml version="1.0"?>
<block>
  <name>PulseAudio Source</name>
  <key>pulseaudio_pa_source</key>
  <category>Sources</category>
  <import>import pulseaudio</import>
  <make>pulseaudio.pa_source($samp_rate, $nchannels)</make>

  <param>
    <name>Num Channels</name>
    <key>nchannels</key>
    <value>1</value>
    <type>int</type>
  </param>

  <param>
    <name>Sample Rate</name>
    <key>samp_rate</key>
    <value>samp_rate</value>
    <type>int</type>
  </param>

  <check>$nchannels &gt; 0</check>
  <check>$samp_rate &gt; 0</check>

  <source>
    <name>out</name>
    <type>float</type>
    <nports>$nchannels</nports>
  </source>
</block>
