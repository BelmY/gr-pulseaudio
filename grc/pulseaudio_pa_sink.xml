<?xml version="1.0"?>
<block>
  <name>PulseAudio Sink</name>
  <key>pulseaudio_pa_sink</key>
  <category>Sinks</category>
  <import>import pulseaudio</import>
  <make>pulseaudio.pa_sink($samp_rate, $nchannels)</make>

  <param>
    <name>Num Channels</name>
    <key>nchannels</key>
    <value>1</value>
    <type>int</type>
  </param>

  <param>
    <name>Sample Rate</name>
    <key>samp_rate</key>
    <value>samp_rate</value>
    <type>int</type>
  </param>

  <check>$nchannels &gt; 0</check>
  <check>$samp_rate &gt; 0</check>

  <sink>
    <name>in</name>
    <type>float</type>
    <nports>$nchannels</nports>
  </sink>
</block>
